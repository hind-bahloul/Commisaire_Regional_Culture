<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaisonCulture">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/noto_serif"
                    android:gravity="center"
                    android:text="دار الثقافة ساقية الدائر "
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textColorLink="#FFFFFF"
                    android:textSize="30sp"
                    app:fontFamily="@font/noto_serif" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="328dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:paddingLeft="10sp"
                            android:paddingTop="12sp"
                            android:paddingRight="10sp"
                            android:paddingBottom="10sp"
                            android:fontFamily="@font/noto_serif"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="20sp"
                            android:text="نبيلة جردق"
                             />
                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/utilisateur" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="328dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:paddingLeft="10sp"
                            android:paddingTop="12sp"
                            android:paddingRight="10sp"
                            android:paddingBottom="10sp"
                            android:fontFamily="@font/noto_serif"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="20sp"
                            android:text=" طريق المهدية ساقية الدائر كم 6.5"
                             />
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/address" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="328dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/noto_serif"
                            android:paddingLeft="230sp"
                            android:paddingTop="12sp"
                            android:paddingRight="10sp"
                            android:paddingBottom="10sp"
                            android:text=" 74293394"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="20sp" />
                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/phone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="320dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:text="www.facebook.com/ دار-الثقافة-ساقية-الدائر-صفاقس-908207952683908"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="12dp" />
                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/fb" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="212dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/sakieteddayer" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt6"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="?attr/colorPrimaryDark"
                            android:gravity="center"

                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:text="النوادي"/>

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                        <TextView
                            android:id="@+id/txtEv"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="?attr/colorPrimaryDark"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:text="التظاهرات الثقافية" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>